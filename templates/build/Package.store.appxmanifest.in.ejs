<?xml version="1.0" encoding="utf-8"?>
<Package xmlns="http://schemas.microsoft.com/appx/2010/manifest"
	 xmlns:m2="http://schemas.microsoft.com/appx/2013/manifest">

  <Identity Name="@PACKAGE_GUID@"
	    Publisher="@PUBLISHER_ID@"
	    Version="@VERSION@" />

  <Properties>
    <DisplayName>ms-resource:app_name</DisplayName>
    <PublisherDisplayName>@PUBLISHER_DISPLAY_NAME@</PublisherDisplayName>
    <Logo>StoreLogo.png</Logo>
<% for(var i = 0; i < manifest.Properties.length; i++) { -%>
    <%- manifest.Properties[i].toString() %>
<% } -%>
  </Properties>

  <Prerequisites>
    <OSMinVersion>6.3</OSMinVersion>
    <OSMaxVersionTested>6.3</OSMaxVersionTested>
<% for(var i = 0; i < manifest.Prerequisites.length; i++) { -%>
    <%- manifest.Prerequisites[i].toString() %>
<% } -%>
  </Prerequisites>

  <Resources>
    <Resource Language="x-generate" />
<% for(var i = 0; i < manifest.Resources.length; i++) { -%>
    <%- manifest.Resources[i].toString() %>
<% } -%>
  </Resources>

  <Applications>
    <Application Id="App"
		 Executable="$targetnametoken$.exe"
		 EntryPoint="@SHORT_NAME@.App">
      <m2:VisualElements
          DisplayName="ms-resource:app_name"
          Description="ms-resource:app_description"
          BackgroundColor="<%= manifest.Applications.Application.VisualElements.BackgroundColor %>"
          ForegroundText="<%= manifest.Applications.Application.VisualElements.ForegroundText %>"
          Square150x150Logo="Logo.png"
          Square30x30Logo="SmallLogo.png"
          ToastCapable="true">
<% if (manifest.requiresBadgeLogo) { -%>
        <m2:LockScreen Notification="badge" BadgeLogo="Square24x24Logo.png" />
<% } -%>
        <m2:DefaultTile ShortName="ms-resource:app_name">
          <m2:ShowNameOnTiles>
            <m2:ShowOn Tile="square150x150Logo" />
          </m2:ShowNameOnTiles>
        </m2:DefaultTile>
        <m2:SplashScreen BackgroundColor="<%= manifest.Applications.Application.VisualElements.SplashScreen.BackgroundColor %>" Image="SplashScreen.png" />
      </m2:VisualElements>

<% if (manifest.Extensions.length > 0) { -%>
      <Extensions>
<% for(var i = 0; i < manifest.Extensions.length; i++) { -%>
      <%- manifest.Extensions[i].toString() %>
<% } -%>
      </Extensions>
<% } -%>

    </Application>
  </Applications>

<% if (manifest.PackageExtensions.length > 0) { -%>
  <Extensions>
<% for(var i = 0; i < manifest.PackageExtensions.length; i++) { -%>
    <%- manifest.PackageExtensions[i] %>
<% } -%>
  </Extensions>
<% } -%>

  <Capabilities>
<% for(var i = 0; i < manifest.Capabilities.length; i++) { -%>
    <%- manifest.Capabilities[i].toString() %>
<% } -%>
  </Capabilities>

</Package>
