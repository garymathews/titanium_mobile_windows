<?xml version="1.0" encoding="utf-8"?>

<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:mp="http://schemas.microsoft.com/appx/2014/phone/manifest"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  IgnorableNamespaces="uap mp">

  <Identity
    Name="@PACKAGE_GUID@"
    Publisher="@PUBLISHER_ID@"
    Version="@VERSION@" />

  <mp:PhoneIdentity PhoneProductId="@PHONE_PRODUCT_ID@" PhonePublisherId="@PHONE_PUBLISHER_ID@"/>

  <Properties>
    <DisplayName>ms-resource:app_name</DisplayName>
    <PublisherDisplayName>@PUBLISHER_DISPLAY_NAME@</PublisherDisplayName>
    <Logo>StoreLogo.png</Logo>
<% for(var i = 0; i < manifest.Properties.length; i++) { -%>
    <%- manifest.Properties[i] %>
<% } -%>
  </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Universal" MinVersion="10.0.0.0" MaxVersionTested="10.0.0.0" />
  </Dependencies>

  <Resources>
    <Resource Language="x-generate" />
<% for(var i = 0; i < manifest.Resources.length; i++) { -%>
    <%- manifest.Resources[i].toString() %>
<% } -%>
  </Resources>

  <Applications>
    <Application Id="App"
      Executable="$targetnametoken$.exe"
      EntryPoint="@SHORT_NAME@.App">
      <uap:VisualElements
        DisplayName="ms-resource:app_name"
        Square150x150Logo="Square150x150Logo.png"
        Square44x44Logo="Square44x44Logo.png"
        Description="ms-resource:app_description"
        BackgroundColor="<%= manifest.Applications.Application.VisualElements.BackgroundColor %>">
<% if (manifest.requiresBadgeLogo) { -%>
        <uap:LockScreen Notification="badge" BadgeLogo="Square24x24Logo.png" />
<% } -%>
        <uap:DefaultTile Square71x71Logo="Square71x71Logo.png"/>
        <uap:SplashScreen Image="SplashScreen.png" BackgroundColor="<%= manifest.Applications.Application.VisualElements.SplashScreen.BackgroundColor %>" />
      </uap:VisualElements>

<% if (manifest.Extensions.length > 0) { -%>
      <Extensions>
<% for(var i = 0; i < manifest.Extensions.length; i++) { -%>
      <%- manifest.Extensions[i].toString() %>
<% } -%>
      </Extensions>
<% } -%>

    </Application>
  </Applications>

<% if (manifest.PackageExtensions.length > 0) { -%>
  <Extensions>
<% for(var i = 0; i < manifest.PackageExtensions.length; i++) { -%>
    <%- manifest.PackageExtensions[i] %>
<% } -%>
  </Extensions>
<% } -%>

  <Capabilities>
<% for(var i = 0; i < manifest.Capabilities.length; i++) { -%>
    <%- manifest.Capabilities[i].toString() %>
<% } -%>
  </Capabilities>
</Package>
